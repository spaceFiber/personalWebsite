extends base.pug

block scripts
    link(rel='stylesheet', href='../static/styles.css')

block style
    style
        include ../static/styles.css

block content
    // Page Header
    header.masthead(style="background-image: url('../static/assets/img/contact-bg.webp')")
        div.container.position-relative.px-4.px-lg-5
            div.row.gx-4.gx-lg-5.justify-content-center
                div.col-md-10.col-lg-8.col-xl-7
                    div.page-heading
                        h1 Contact Me
                        span.subheading Have questions? Don't hesitate to reach me
    // Main Content
    main.mb-4
        div.container.px-4.px-lg-5
            div.row.gx-4.gx-lg-5.justify-content-center
                div.col-md-10.col-lg-8.col-xl-7
                    p Want to get in touch? Fill out the form below to send me a message, and I will get back to you as soon as possible!
                    div.my-5
                        // SB Forms Contact Form
                        form#contactForm(action="/contact", method="post")
                            div.form-floating
                                input.form-control#name(name="name", type="text", placeholder="Enter your name...", data-sb-validations="required")
                                label(for="name") Name
                                div.invalid-feedback(data-sb-feedback="name:required") A name is required.
                            div.form-floating
                                input.form-control#email(name="email", type="email", placeholder="Enter your email...", data-sb-validations="required,email")
                                label(for="email") Email address
                                div.invalid-feedback(data-sb-feedback="email:required") An email is required.
                                div.invalid-feedback(data-sb-feedback="email:email") Email is not valid.
                            div.form-floating
                                input.form-control#phone(name="phone", type="tel", placeholder="Enter your phone number...", data-sb-validations="required")
                                label(for="phone") Phone Number
                                div.invalid-feedback(data-sb-feedback="phone:required") A phone number is required.
                            div.form-floating
                                textarea.form-control#message(name="message", placeholder="Enter your message here...", style="height: 12rem", data-sb-validations="required")
                                label(for="message") Message
                                div.invalid-feedback(data-sb-feedback="message:required") A message is required.
                            br
                            // Submit success message
                            .d-none#submitSuccessMessage
                                div.text-center.mb-3
                                    div.fw-bolder Form submission successful!
                                    br
                            // Submit error message
                            .d-none#submitErrorMessage
                                div.text-center.text-danger.mb-3 Error sending message!
                            // Submit Button
                            button.btn.btn-primary.text-uppercase.enabled#submitButton(type="submit") Send